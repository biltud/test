#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Search for any console.log (case insensitive)
if grep -Rni "console\.log" ./src >/dev/null 2>&1; then
  echo "❌ Commit blocked!"
  echo "console.log found in source files. Remove them before committing."
  exit 1
fi

echo "✔ No console.log found — Commit allowed."
