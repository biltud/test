#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Read PORT from .env
PORT=$(grep "^PORT=" .env | cut -d "=" -f2)

# If port is empty
if [ -z "$PORT" ]; then
  echo "❌ PORT not found in .env — Commit blocked!"
  exit 1
fi

# Block commit if port is NOT 3005
if [ "$PORT" != "3005" ]; then
  echo "❌ Commit blocked!"
  echo "Your PORT is $PORT but it must be 3005."
  exit 1
fi

echo "✔ PORT is 3005 — commit allowed."
